{"ast":null,"code":"import { Swiper, SwiperSlide } from 'swiper/vue';\nimport RelatedProduct from \"./RelatedProducts.vue\";\nimport { ratingGenerator } from '@/HelpersFunction/Helpers';\nimport axios from \"axios\";\nimport 'swiper/css';\nimport \"swiper/css/free-mode\";\nimport \"swiper/css/navigation\";\nimport \"swiper/css/thumbs\"; // import './style.css';\n\nimport { FreeMode, Navigation, Thumbs } from 'swiper';\nexport default {\n  props: ['slug'],\n  components: {\n    RelatedProduct,\n    Swiper,\n    SwiperSlide\n  },\n\n  data() {\n    return {\n      auth: {\n        isAuthenticated: false,\n        user: {}\n      },\n      productDetails: [],\n      shopDetails: [],\n      relatedProducts: [],\n      topSellingProducts: [],\n      thumbsSwiper: null,\n      modules: [FreeMode, Navigation, Thumbs],\n      zoomLevel: 1,\n      photosLength: \"\",\n      vendorActivation: \"\",\n      coversationSystem: \"\",\n      brandData: \"\",\n      club_point: \"\",\n      affiliteCheck: \"\",\n      user_status: \"\",\n      refarral_code_url: \"\"\n    };\n  },\n\n  created() {\n    var user = localStorage.getItem(\"user\");\n\n    if (user !== null) {\n      user = JSON.parse(user);\n      this.auth.isAuthenticated = true;\n    }\n\n    this.auth.user = user;\n  },\n\n  mounted() {\n    this.getProductDetails(this.rootDomain);\n  },\n\n  computed: {\n    zoomStyle() {\n      return {\n        transform: `scale(${this.zoomLevel})`\n      };\n    }\n\n  },\n  methods: {\n    getProductDetails(rootDomain) {\n      let token = '';\n\n      if (this.auth.isAuthenticated == true) {\n        token = this.auth.user.access_token;\n      }\n\n      axios.get(rootDomain + 'vueweb/product/' + this.slug, {\n        params: {\n          token: token,\n          selfDomain: this.selfDomain\n        }\n      }).then(response => {\n        this.productDetails = response.data[0].data[0];\n        this.photosLength = this.productDetails.photos.length;\n        this.shopDetails = response.data[1];\n        this.relatedProducts = response.data[2].data;\n        this.topSellingProducts = response.data[3].data;\n        this.vendorActivation = response.data[4];\n        this.coversationSystem = response.data[5];\n        this.brandData = response.data[0].data[0].brand;\n        this.club_point = response.data[6];\n        this.affiliteCheck = response.data[7];\n        this.user_status = this.auth.user.user_status;\n        this.refarral_code_url = response.data[8];\n      });\n    },\n\n    brandSlug(brand_slug) {\n      this.$router.push({\n        name: \"Brand\",\n        params: {\n          brand_slug: brand_slug\n        }\n      });\n    },\n\n    setThumbsSwiper(swiper) {\n      this.thumbsSwiper = swiper;\n    },\n\n    zoomIn() {\n      this.zoomLevel += 0.5;\n    },\n\n    zoomOut() {\n      this.zoomLevel -= 0.5;\n    },\n\n    CopyToClipboard(url) {\n      navigator.clipboard.writeText(url);\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAmnBA,SAASA,MAAT,EAAiBC,WAAjB,QAAoC,YAApC;AACA,OAAOC,cAAP,MAA2B,uBAA3B;AACA,SAASC,eAAT,QAAgC,2BAAhC;AACA,OAAOC,KAAP,MAAkB,OAAlB;AACA,OAAO,YAAP;AACA,OAAO,sBAAP;AACA,OAAO,uBAAP;AACA,OAAO,mBAAP,C,CACA;;AACA,SAAQC,QAAR,EAAiBC,UAAjB,EAA4BC,MAA5B,QAAyC,QAAzC;AACA,eAAe;EACZC,KAAK,EAAC,CAAC,MAAD,CADM;EAEZC,UAAU,EAAC;IAACP,cAAD;IAAiBF,MAAjB;IAAyBC;EAAzB,CAFC;;EAGRS,IAAI,GAAE;IACL,OAAM;MACJC,IAAI,EAAC;QACCC,eAAe,EAAE,KADlB;QAECC,IAAI,EAAE;MAFP,CADD;MAKHC,cAAc,EAAC,EALZ;MAMHC,WAAW,EAAC,EANT;MAOHC,eAAe,EAAC,EAPb;MAQHC,kBAAkB,EAAC,EARhB;MASHC,YAAY,EAAC,IATV;MAUHC,OAAO,EAAE,CAACd,QAAD,EAAUC,UAAV,EAAqBC,MAArB,CAVN;MAWHa,SAAS,EAAE,CAXR;MAYHC,YAAY,EAAC,EAZV;MAaHC,gBAAgB,EAAC,EAbd;MAcHC,iBAAiB,EAAC,EAdf;MAeHC,SAAS,EAAC,EAfP;MAgBHC,UAAU,EAAC,EAhBR;MAiBHC,aAAa,EAAC,EAjBX;MAkBHC,WAAW,EAAC,EAlBT;MAmBHC,iBAAiB,EAAC;IAnBf,CAAN;EAqBA,CAzBO;;EA0BRC,OAAO,GAAE;IACP,IAAIhB,IAAG,GAAIiB,YAAY,CAACC,OAAb,CAAqB,MAArB,CAAX;;IACD,IAAGlB,IAAG,KAAM,IAAZ,EAAiB;MACbA,IAAG,GAAImB,IAAI,CAACC,KAAL,CAAWpB,IAAX,CAAP;MACA,KAAKF,IAAL,CAAUC,eAAV,GAA4B,IAA5B;IACD;;IAAI,KAAKD,IAAL,CAAUE,IAAV,GAAiBA,IAAjB;EACP,CAhCO;;EAiCRqB,OAAO,GAAE;IACR,KAAKC,iBAAL,CAAuB,KAAKC,UAA5B;EACA,CAnCO;;EAoCRC,QAAQ,EAAE;IACXC,SAAS,GAAG;MACT,OAAO;QACPC,SAAS,EAAG,SAAQ,KAAKnB,SAAU;MAD5B,CAAP;IAGH;;EALW,CApCF;EA2CRoB,OAAO,EAAC;IACNL,iBAAiB,CAACC,UAAD,EAAY;MAClB,IAAIK,KAAK,GAAC,EAAV;;MACA,IAAG,KAAK9B,IAAL,CAAUC,eAAV,IAA2B,IAA9B,EAAmC;QACjC6B,KAAI,GAAI,KAAK9B,IAAL,CAAUE,IAAV,CAAe6B,YAAvB;MACF;;MACCtC,KAAK,CAACuC,GAAN,CAAUP,UAAU,GAAC,iBAAX,GAA6B,KAAKQ,IAA5C,EAAiD;QAC9CC,MAAM,EAAC;UACJJ,KAAK,EAACA,KADF;UAEJK,UAAU,EAAC,KAAKA;QAFZ;MADuC,CAAjD,EAMCC,IAND,CAMOC,QAAD,IAAY;QACf,KAAKlC,cAAL,GAAsBkC,QAAQ,CAACtC,IAAT,CAAc,CAAd,EAAiBA,IAAjB,CAAsB,CAAtB,CAAtB;QACA,KAAKW,YAAL,GAAkB,KAAKP,cAAL,CAAoBmC,MAApB,CAA2BC,MAA7C;QACA,KAAKnC,WAAL,GAAmBiC,QAAQ,CAACtC,IAAT,CAAc,CAAd,CAAnB;QACA,KAAKM,eAAL,GAAuBgC,QAAQ,CAACtC,IAAT,CAAc,CAAd,EAAiBA,IAAxC;QACA,KAAKO,kBAAL,GAA0B+B,QAAQ,CAACtC,IAAT,CAAc,CAAd,EAAiBA,IAA3C;QACA,KAAKY,gBAAL,GAAwB0B,QAAQ,CAACtC,IAAT,CAAc,CAAd,CAAxB;QACA,KAAKa,iBAAL,GAAyByB,QAAQ,CAACtC,IAAT,CAAc,CAAd,CAAzB;QACA,KAAKc,SAAL,GAAiBwB,QAAQ,CAACtC,IAAT,CAAc,CAAd,EAAiBA,IAAjB,CAAsB,CAAtB,EAAyByC,KAA1C;QACA,KAAK1B,UAAL,GAAkBuB,QAAQ,CAACtC,IAAT,CAAc,CAAd,CAAlB;QACA,KAAKgB,aAAL,GAAqBsB,QAAQ,CAACtC,IAAT,CAAc,CAAd,CAArB;QACA,KAAKiB,WAAL,GAAmB,KAAKhB,IAAL,CAAUE,IAAV,CAAec,WAAlC;QACA,KAAKC,iBAAL,GAAyBoB,QAAQ,CAACtC,IAAT,CAAc,CAAd,CAAzB;MACF,CAnBD;IAoBL,CA1BD;;IA2BA0C,SAAS,CAACC,UAAD,EAAY;MAClB,KAAKC,OAAL,CAAaC,IAAb,CAAkB;QACfC,IAAI,EAAE,OADS;QAEfX,MAAM,EAAE;UACRQ,UAAU,EAAEA;QADJ;MAFO,CAAlB;IAMF,CAlCD;;IAmCCI,eAAe,CAACC,MAAD,EAAQ;MACrB,KAAKxC,YAAL,GAAoBwC,MAApB;IACF,CArCD;;IAsCAC,MAAM,GAAG;MACN,KAAKvC,SAAL,IAAkB,GAAlB;IACF,CAxCD;;IAyCAwC,OAAO,GAAG;MACP,KAAKxC,SAAL,IAAkB,GAAlB;IACF,CA3CD;;IA4CAyC,eAAe,CAACC,GAAD,EAAK;MACjBC,SAAS,CAACC,SAAV,CAAoBC,SAApB,CAA8BH,GAA9B;IACH;;EA9CA;AA3CA,CAAf","names":["Swiper","SwiperSlide","RelatedProduct","ratingGenerator","axios","FreeMode","Navigation","Thumbs","props","components","data","auth","isAuthenticated","user","productDetails","shopDetails","relatedProducts","topSellingProducts","thumbsSwiper","modules","zoomLevel","photosLength","vendorActivation","coversationSystem","brandData","club_point","affiliteCheck","user_status","refarral_code_url","created","localStorage","getItem","JSON","parse","mounted","getProductDetails","rootDomain","computed","zoomStyle","transform","methods","token","access_token","get","slug","params","selfDomain","then","response","photos","length","brand","brandSlug","brand_slug","$router","push","name","setThumbsSwiper","swiper","zoomIn","zoomOut","CopyToClipboard","url","navigator","clipboard","writeText"],"sourceRoot":"","sources":["F:\\adminDeal\\src\\components\\ResourceComponents\\ProductComponents\\product_details.vue"],"sourcesContent":["<template>\n <section class=\"mb-4 pt-3\">\n   <div class=\"container\">\n      <div class=\"bg-white shadow-sm rounded p-3\">\n         <div class=\"row\">\n            <div class=\"col-xl-5 col-lg-5 mb-4\">\n               <!-- <div class=\"sticky-top z-3 row gutters-10\">\n                  <div class=\"col order-1 order-md-2\">\n                     <div class=\"aiz-carousel product-gallery\" data-nav-for='.product-gallery-thumb' data-fade='true' data-auto-height='true'>\n                        <div class=\"carousel-box img-zoom rounded\">\n                           \n                           <img\n                              class=\"img-fluid lazyload\"\n                              src=\"https://admindeal.com.bd/public/assets/img/placeholder.jpg\" :data-src=\"productDetails.thumbnail_image\"\n                              >\n                        </div>\n                     </div>\n                  </div>\n                  <div class=\"col-12 col-md-auto w-md-80px order-2 order-md-1 mt-3 mt-md-0\">\n                     <div class=\"aiz-carousel product-gallery-thumb\" data-items='5' data-nav-for='.product-gallery' data-vertical='true' data-vertical-sm='false' data-focus-select='true' data-arrows='true'>\n                        <div class=\"carousel-box c-pointer border p-1 rounded\">\n                           <img\n                              class=\"lazyload mw-100 size-50px mx-auto\"\n                              src=\"https://admindeal.com.bd/public/assets/img/placeholder.jpg\" :data-src=\"productDetails.thumbnail_image\"\n                              >\n                        </div>\n                     </div>\n                  </div>\n               </div> -->\n               <swiper\n                  :style=\"{\n                     '--swiper-navigation-color': '#fff',\n                     '--swiper-pagination-color': '#fff',\n                  }\"\n                  :loop=\"true\"\n                  :spaceBetween=\"10\"\n                  :navigation=\"true\"\n                  :thumbs=\"{ swiper: thumbsSwiper }\"\n                  :modules=\"modules\"\n                  class=\"mySwiper2\"\n               >\n                    <swiper-slide v-for=\"(photo,index) in productDetails.photos\" :key=\"index\">\n                     <img width=\"400\"\n                     :style=\"zoomStyle\"\n                     v-on:mouseover=\"zoomIn\" v-on:mouseout=\"zoomOut\"\n                     :src=\"photo.path\" />\n                     </swiper-slide>\n               </swiper>\n               <swiper\n                  @swiper=\"setThumbsSwiper\"\n                  :loop=\"true\"\n                  :spaceBetween=\"-100\"\n                  :slidesPerView=\"2\"\n                  :freeMode=\"true\"\n                  :watchSlidesProgress=\"true\"\n                  :modules=\"modules\"\n                  class=\"mySwiper\"\n               >\n                  <swiper-slide v-for=\"(photo,index) in productDetails.photos\" :key=\"index\">\n                     <img width=\"100\"\n                     :src=\"photo.path\"/>\n                     </swiper-slide\n                  >\n               </swiper>\n            </div>\n            <div class=\"col-xl-7 col-lg-7\">\n               <!--start -->\n               <div class=\"text-left\">\n                  <div class=\"row\">\n                     <div class=\"col-md-7 \">\n                        <h1 class=\"mb-2 fs-20 fw-600\" id='name'>\n                           {{ productDetails.name }}\n                        </h1>\n                        <div class=\"row align-items-center \">\n                           <div class=\"col-12 \" style=\"color: #2abbe8;\">\n                              Total sold: <b>( 5 )</b> ; <span>Ship On Time: <b>100%</b> </span>\n                           </div>\n                           <div class=\"col-12 \" style=\"color: #2abbe8;\">\n                              Answered Questions: ( See Below ) <br> Seller Response Rate: ( 100% )\n                           </div>\n                           <div class=\"col-12 \" style=\"color: #2abbe8;\">\n                              Positive Seller Ratings: (100%)\n                           </div>\n                           <div v-if=\"productDetails.est_shipping_days\" class=\"col-auto ml\" style=\"color: #2abbe8;\">\n                              <small class=\"mr-2 opacity-50\">Estimate Shipping Time: </small>{{ productDetails.est_shipping_days }}\n                           </div>\n                           <div class=\"col-12 \" style=\"color: #2abbe8;\">\n                              <span class=\"rating\">                                \n                                 <template v-for=\"index in 5\" :key=\"index\">\n                                    <i v-if=\"index<=productDetails.rating\" class='las la-star active'></i>\n                                    <i v-else class = 'las la-star'></i>\n                                 </template>\n                              </span>\n                              <span class=\"ml-1 opacity-50\" id='review'>({{ productDetails.reviews==0?'0':productDetails.reviews }}</span>reviews) <br>\n                           </div>\n                           <div class=\"my-offer-banner-physical\">\n                              <br> <img src=\"https://admindeal.com.bd/Admin-Deal-Product-Details-Discount.png#width=480&height=72\">\n                           </div>\n                           <!--                                  <div class=\"col-auto ml\">\n                              <small class=\"mr-2 opacity-50\">Estimate Shipping Time: </small>1 Days\n                              </div>\n                              --> \n                        </div>\n                        <hr>\n                        <div class=\"row align-items-center\">\n                           <div class=\"col-auto\">\n                              <small class=\"mr-2 opacity-50\">Sold by: </small><br>\n                              <a href=\"\" v-if=\"productDetails.added_by=='seller' && vendorActivation==1\" class=\"text-reset\" id='shop_name'>{{ productDetails.shop_name }}</a>\n                              <span v-else>\n                                 Admin store\n                              </span>\n                           </div>\n                           \n                           <div v-if=\"coversationSystem==1\" class=\"col-auto\">\n                              <button class=\"btn btn-sm btn-secondary\" onclick=\"show_chat_modal()\">Chat With Seller</button>\n                           </div>\n                          \n                           <div v-if=\"brandData!==null\" class=\"col-auto\">\n                              <a style=\"cursor:pointer\" @click=\"brandSlug(brandData.slug)\">\n                              <img  src=\"https://admindeal.com.bd/public/assets/img/placeholder.jpg\" :data-src=\"brandData.logo\" id='brand_name' alt=\"Others\" height=\"30\">\n                              </a>\n                           </div>\n                        </div>\n                        <br>\n                        <div> <a href=\"https://www.admindeal.com.bd/support_ticket\"> ❌ Report to Admin incorrect product information!</a></div>\n                        <hr>\n                              <template v-if=\"productDetails.wholesale_product\">\n                                 <table class=\"aiz-table mb-0\">\n                                    <thead>\n                                        <tr>\n                                            <th>Min Qty</th>\n                                            <th>Max Qty</th>\n                                            <th>Unit Price</th>\n                                        </tr>\n                                    </thead>\n                                    <tbody>\n                                        \n                                            <tr v-for=\"(wholesalePrice,index) in productDetails.wholesalePrices\" :key=\"index\">\n                                                <td>{{ wholesalePrice.min_qty }}</td>\n                                                <td>{{ wholesalePrice.max_qty }}</td>\n                                                <td>{{ wholesalePrice.price }}</td>\n                                            </tr>\n                                       \n                                    </tbody>\n                                </table>\n                              </template>\n                              <template v-else>\n                                 <div v-if=\"productDetails.home_price != productDetails.home_discounted_price\">\n\n                                 <div  class=\"row no-gutters mt-3\">\n                                    <div class=\"col-2\">\n                                       <div class=\"opacity-50 my-2\">Price:</div>\n                                    </div>\n                                    <div class=\"col-10\">\n                                       <div class=\"fs-20 opacity-60\">\n                                          <del>\n                                          {{ productDetails.home_price }}\n                                          <span v-if=\"productDetails.unit!=null\">/{{ productDetails.unit }}</span>\n                                          </del>\n                                       </div>\n                                    </div>\n                                 </div>\n                                 <div class=\"row no-gutters my-2\">\n                                    <div class=\"col-2\">\n                                       <div class=\"opacity-50\">Discount Price:</div>\n                                    </div>\n                                    <div class=\"col-10\">\n                                       <div class=\"\">\n                                          <strong class=\"h2 fw-600 text-primary\" id='discount_price' >\n                                          {{ productDetails.home_discounted_price }}\n                                          </strong>\n                                          <span  class=\"opacity-70\" v-if=\"productDetails.unit!=null\">/{{ productDetails.unit }}</span>\n                                       </div>\n                                    </div>\n                                 </div>                              \n                              </div>\n                                 <div v-else class=\"row no-gutters mt-3\">\n                              <div class=\"col-2\">\n                                 <div class=\"opacity-50 my-2\">Price:</div>\n                              </div>\n                              <div class=\"col-10\">\n                                 <div class=\"\">\n                                    <strong class=\"h2 fw-600 text-primary\" id='price'>\n                                       {{ productDetails.home_discounted_price }}      \n                                    </strong>\n                                    <span  class=\"opacity-70\" v-if=\"productDetails.unit!=null\">/{{ productDetails.unit }}</span>\n                                 </div>\n                              </div>\n                           </div>\n                              </template>\n                              \n                                <div v-if=\"club_point==1&&productDetails.earn_point > 0\" class=\"row no-gutters mt-4\">\n                                    <div class=\"col-3\">\n                                        <div class=\"opacity-50 my-2\">Club Point--Cashback:</div>\n                                    </div> \n                                    <div class=\"col-9\">\n                                        <div class=\"d-inline-block rounded px-2 bg-soft-primary border-soft-primary border\">\n                                            <span class=\"strong-700\">{{ productDetails.earn_point }}</span>\n                                        </div>\n                                    </div>\n                                </div>\n                          \n                        <hr>\n                        <form id=\"option-choice-form\">\n                           <input type=\"hidden\" name=\"_token\" value=\"g23HdCifgj7mR2HpZBvYm1R9ojfXGsI5ZWHPmpzZ\">                                \n                           <input type=\"hidden\" name=\"id\" value=\"5931\">\n                           <!-- Quantity + Add to cart -->\n                           <div class=\"row no-gutters\">\n                              <div class=\"col-sm-2\">\n                                 <div class=\"opacity-50 my-2\">Quantity:</div>\n                              </div>\n                              <div class=\"col-sm-10\">\n                                 <div class=\"product-quantity d-flex align-items-center\">\n                                    <div class=\"row no-gutters align-items-center aiz-plus-minus mr-3\" style=\"width: 130px;\">\n                                       <button class=\"btn col-auto btn-icon btn-sm btn-circle btn-light\" type=\"button\" data-type=\"minus\" data-field=\"quantity\" disabled=\"\">\n                                       <i class=\"las la-minus\"></i>\n                                       </button>\n                                       <input type=\"number\" name=\"quantity\" class=\"col border-0 text-center flex-grow-1 fs-16 input-number\" placeholder=\"1\" value=\"1\" min=\"1\" max=\"10\">\n                                       <button class=\"btn  col-auto btn-icon btn-sm btn-circle btn-light\" type=\"button\" data-type=\"plus\" data-field=\"quantity\">\n                                       <i class=\"las la-plus\"></i>\n                                       </button>\n                                    </div>\n                                    <div class=\"avialable-amount opacity-60\">\n                                    <template v-if=\"productDetails.stock_visibility_state=='quantity'\" id=\"available-quantity\">\n                                       (<span>{{ productDetails.stocks }}</span> available)\n                                    </template>\n                                   \n                                    <template v-else-if=\"productDetails.stock_visibility_state=='text' && productDetails.stocks >= 1\">\n                                       (<span id=\"available-quantity\">In Stock</span>)\n                                    </template>\n                                 \n                                 </div>\n                                 </div>\n                             \n                              </div> \n                           </div>\n                           <hr>\n                           <div class=\"row no-gutters pb-3 d-none\" id=\"chosen_price_div\">\n                              <div class=\"col-2\">\n                                 <div class=\"opacity-50 my-2\">Total Price:</div>\n                              </div>\n                              <div class=\"col-7\">\n                                 <div class=\"product-price\">\n                                    <strong id=\"chosen_price\" class=\"h4 fw-600 text-primary\">\n                                    </strong>\n                                 </div>\n                              </div>\n                              <div class=\"col-3\">\n                                 <span class=\"box ml-1 border-sm p-2 fs-15 shadow-sm mr-0 text-danger\">&nbsp;{{productDetails.discount}}% OFF </span>\n                              </div>\n                           </div>\n                        </form>\n                     </div>\n                     <div class=\"col-md-5 \">\n                        <div class=\"shadow-lg px-3 py-3\">\n                           <div class=\"mt-3\">\n                              <div class=\"mb-3\">\n                                 আপনার সুবিধা মত কুরিয়ারের মাধ্যমে প্রডাক্ট টি ডেলিভারি নিতে পারবেন ৷  বিস্তারিত  Delivery info পেজে। কোন কারনে প্রডাক্টের মান ঠিক না থাকলে,  প্রডাক্ট রিটার্ন, রিফান্ড বা একচেন্জ সুবিধা তো থাকছে\n                              </div>\n                              <div class=\"fw-600 mb-3\">\n                                 <b>Product delivery within 24 hours if order is confirmed within 54 minutes</b>\n                              </div>\n                              <div class=\"fw-600 mb-3\" style=\"color: #f05a22;\">\n                                 মাত্র ১০০০ টাকার পণ্য কিনলেই হোম ডেলিভারি  ফ্রী \n                              </div>\n                                 <!-- <a v-if=\"productDetails.external_link!=null\" type=\"button\" class=\"btn btn-primary buy-now fw-600\" :href=\"productDetails.external_link\">\n                                    <i class=\"la la-share\"></i> {{productDetails.external_link_btn}}\n                                 </a> -->\n                                          \n                              <div class=\"avialable-amount opacity-60\">\n                                 In Stock: <b> Qty-</b>\n                                 <b> \n  